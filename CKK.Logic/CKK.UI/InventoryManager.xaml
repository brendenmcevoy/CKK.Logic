                    Grid.Row="4" Click="sortQ_Click" Margin="151,0,92,0"/>

            <Button x:Name="sortP"
                    Content="Price Sort"
                    Style="{StaticResource buttonStyle}"
                    Grid.Column="2"
                    Grid.Row="4"
                    Click="sortP_Click" Grid.ColumnSpan="2" Margin="0,0,70,0"/>

            <Button x:Name="clearButton"
                    Content="Clear Results"
                    Style="{StaticResource buttonStyle}"
                    Grid.Column="4"
                    Grid.Row="2" 
                    Click="clearButton_Click" 
                    HorizontalAlignment="Right"
                    Margin="0,0,38,2" 
                    Width="130" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

            <Button x:Name="refreshButton"
                    Content="Refresh"
                    Style="{StaticResource buttonStyle}"
                    Grid.Column="3"
                    Grid.Row="4" Click="refreshButton_Click" Grid.ColumnSpan="2" Margin="0,0,70,0"/>-->
        </Grid>
    </Border>
